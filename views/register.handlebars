<section class="container-row">
  <section class="login-register-box">
    <div class="form-hdr-banner">
      <h4 class="form-hdr">Sign Up</h4>
    </div>
    <div class="form-group">
      <label for="first-name-register-user">First Name: </label>
      <input class="form-input" type="text" id="first-name-register-user" />
    </div>
    <div class="form-group">
      <label for="last-name-register-user">Last Name: </label>
      <input class="form-input" type="text" id="last-name-register-user" />
    </div>
    <div class="form-group">
      <label for="username-register-user">Username: </label>
      <input class="form-input" type="text" id="username-register-user" />
    </div>
    <div class="form-group">
      <label for="email-register-user">Email: </label>
      <input class="form-input" type="text" id="email-register-user" />
    </div>
    <div class="form-group">
      <label for="password-register-user">Password: </label>
      <input class="form-input" type="password" id="password-register-user" />
    </div>
    <div class="submit-redirect-box">
      <button
        class="form-button"
        type="button"
        id="register-user-btn"
      >Submit</button>
      <a href="/login">Login</a>
    </div>
  </section>
</section>

<script src="/js/register.js"></script>